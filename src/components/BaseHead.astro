---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Oscar Cisneros Jr | Technology Leader, Innovator, and Mentor"
  description="Welcome to the official website of Oscar Cisneros Jr, a seasoned technology leader with over a decade of experience in software engineering, cloud-native solutions, and team leadership. Explore insights on building scalable software, fostering innovation, and advocating for diversity in tech. Connect to collaborate or learn more about my journey in driving impactful solutions and empowering the next generation of engineers."
  canonical="https://centrico.io/current-page"
  openGraph={{
    url: "https://centrico.io/current-page",
    title: "Oscar Cisneros Jr | Technology Leader, Innovator, and Mentor",
    description: "A detailed description of your page content.",
    images: [
      {
        url: "https://centrico.io/og-image.jpg",
        width: 1200,
        height: 630,
        alt: "Open Graph Image Alt",
        type: "image/jpeg",
      },
    ],
    site_name: "Your Site Name",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@yourhandle",
    site: "@yoursite",
    cardType: "summary_large_image",
  }}
/>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Basic Meta Tags -->
<title>Oscar Cisneros Jr | Technology Leader, Innovator, and Mentor</title>
<meta name="description" content="Oscar Cisneros Jr - Dynamic technology leader with 10+ years of experience in software engineering, cloud-native solutions, and mentoring diverse teams. Innovator, mentor, and advocate for diversity in tech.">

<meta name="keywords" content="Oscar Cisneros Jr, technology leader, software engineering, cloud-native solutions, distributed systems, tech mentorship, diversity in tech, Code Latino, software innovation, React.js, Kubernetes, Next.js">

<meta name="author" content="Oscar Cisneros Jr">


<!-- Favicons -->
<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />

<!-- Favicon for IE -->
<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

<!-- Favicons for different sizes -->
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://centrico.io/" />
<meta property="og:title" content="Oscar Cisneros Jr - Technology Leader and Innovator">

<meta property="og:description" content="Dynamic technology leader specializing in building scalable software applications, cloud-native solutions, and fostering diverse tech teams.">

<meta
  property="og:image"
  content="https://centrico.io/path/to/image.jpg"
/>

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://centrico.io/" />
<meta name="twitter:title" content="Oscar Cisneros Jr - Technology Leader and Innovator">

<meta name="twitter:description" content="Dynamic technology leader specializing in building scalable software applications, cloud-native solutions, and fostering diverse tech teams.">

<meta
  property="twitter:image"
  content="https://centrico.io/path/to/image.jpg"
/>

<!-- Canonical URL -->
<link rel="canonical" href="https://centrico.io/" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Apple Touch Icon (already included in favicons, but keeping for backwards compatibility) -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

<!-- Theme Color for Mobile Browsers -->
<meta name="theme-color" content="#ffffff" />

<!-- For IE -->
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<!-- Inter font:https://rsms.me/inter/ -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
